# ============================================
# Configurações Pizzaria São Paulo
# Copie este arquivo para .env e configure
# ============================================

# Ambiente
APP_ENV=development
APP_DEBUG=true
APP_NAME="Pizzaria São Paulo"

# ============================================
# BANCO DE DADOS - SQLite (Local/Dev)
# ============================================
DB_TYPE=sqlite
DB_SQLITE_PATH=data/pizzaria.db

# ============================================
# BANCO DE DADOS - MySQL (Production/HostGator)
# ============================================
DB_MYSQL_HOST=seu-host.mysql.com
DB_MYSQL_PORT=3306
DB_MYSQL_DATABASE=seu_banco
DB_MYSQL_USERNAME=seu_usuario
DB_MYSQL_PASSWORD=sua_senha_mysql

# ============================================
# SEGURANÇA & AUTENTICAÇÃO
# ============================================
SESSION_NAME=pizzaria_session
SESSION_LIFETIME=86400
BCRYPT_ROUNDS=10

# Admin Padrão (Criação automática no SQLite)
ADMIN_PHONE=11999999999
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin

# ============================================
# CONFIGURAÇÕES DA PIZZARIA
# ============================================
PIZZARIA_NOME="Pizzaria São Paulo"
PIZZARIA_TELEFONE="(11) 9 9999-9999"
PIZZARIA_EMAIL="contato@pizzaria.com"
PIZZARIA_ENDERECO="Rua São Paulo, 123 - Guarapari, ES"
PIZZARIA_HORA_ABERTURA="11:00"
PIZZARIA_HORA_FECHAMENTO="23:00"

# ============================================
# CIDADES E REGIÕES
# ============================================
PIZZARIA_CIDADE=Guarapari
PIZZARIA_UF=ES
PIZZARIA_PAIS=Brasil

# ============================================
# CONFIGURAÇÕES DE ENTREGA
# ============================================
TAXA_ENTREGA_MINIMA=5.00
TAXA_ENTREGA_MAXIMA=12.00
TEMPO_ENTREGA_MINIMO=25
TEMPO_ENTREGA_MAXIMO=60

# ============================================
# CONFIGURAÇÕES DE PAGAMENTO
# ============================================
ACEITA_DINHEIRO=true
ACEITA_CARTAO=true
ACEITA_PIX=false

# ============================================
# NOTIFICAÇÕES (Opcional)
# ============================================
MAIL_DRIVER=none
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=seu_email
MAIL_PASSWORD=sua_senha

# ============================================
# WHATSAPP (Opcional - Para Notificações)
# ============================================
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_NUMERO_PIZZARIA=

# ============================================
# API (Opcional)
# ============================================
API_KEY=sua_chave_api_aqui
API_SECRET=seu_secret_aqui
